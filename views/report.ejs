	subSystemList = <%- JSON.stringify(subSystems.recordset) %>
	MediaTypeList = <%- JSON.stringify(MediaTypeList.recordset) %>
	WorkTypeList = <%- JSON.stringify(WorkTypeList.recordset) %>
	StateList = <%- JSON.stringify(stateList.recordset) %>
	empList = <%- JSON.stringify(employeeList.recordset) %>
	currentSession = <%- JSON.stringify(currSession) %>
	normalUsers = <%- JSON.stringify(normalUsers.recordset) %>
	userId = currentSession.userId;
	userRole = currentSession.userType;
  </script>
  </head>
