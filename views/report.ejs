	td, th {
		border: 1px solid #dddddd;
		text-align: left;
		padding: 8px;
	}

	tr:nth-child(even) {
		background-color: #dddddd;
	}
	.floatright {
		float: right;
	}
  </style>
  <script type="text/javascript" src="javascripts/jquery-2.2.4.min.js"></script>
  <script type="text/javascript" src="javascripts/form.js"></script>
  <script type="text/javascript">
	projectList = <%- JSON.stringify(projectList.recordset) %>
